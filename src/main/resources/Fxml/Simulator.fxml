<!--Input Container-->

<TabPane prefHeight="415.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.simulator.controllers.SimulatorController">
   <tabs>
      <Tab text="simulator">
         <content>
            <VBox prefHeight="232.0" prefWidth="918.0" spacing="20.0" styleClass="container" stylesheets="@../Styles/styles.css">
               <children>
                  <GridPane prefHeight="268.0" prefWidth="960.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.rowIndex="2">
                           <children>
                              <Label text="Queue1" />
                              <TextArea fx:id="queue1_status" prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                           <children>
                              <Label text="Pantti" />
                              <TextArea fx:id="pantti_status" prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="4" GridPane.rowIndex="1">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label text="Market" />
                                    <TextArea fx:id="market_status" prefHeight="200.0" prefWidth="200.0" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="6" GridPane.rowIndex="1">
                           <children>
                              <Label text="Queue2" />
                              <TextArea fx:id="queue2_status" prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="8">
                           <children>
                              <Label text="Self-checkout" />
                              <TextArea fx:id="selfcheckout_status" prefHeight="200.0" prefWidth="200.0" />
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="8" GridPane.rowIndex="2">
                           <children>
                              <VBox prefHeight="200.0" prefWidth="100.0">
                                 <children>
                                    <Label text="Cashier" />
                                    <TextArea fx:id="casher_status" prefHeight="200.0" prefWidth="200.0" />
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </GridPane>
                  <HBox alignment="CENTER" prefHeight="61.0" prefWidth="878.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="190.0" spacing="10" styleClass="input_container" HBox.hgrow="ALWAYS">
                           <children>
                              <Label styleClass="input_label" text="Number of customers" HBox.hgrow="ALWAYS">
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="input_number" prefHeight="25.0" prefWidth="117.0" styleClass="input_number" />
                           </children>
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </HBox>
                         <!--Button Bar-->
                        <ButtonBar prefHeight="38.0" prefWidth="565.0">
                          <buttons>
                              <Slider fx:id="speed_slider" blockIncrement="0.5" majorTickUnit="0.5" max="2.0" minorTickCount="0" prefHeight="38.0" prefWidth="266.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                                 <padding>
                                    <Insets top="10.0" />
                                 </padding>
                              </Slider>
                              <Button id="btn__play" fx:id="btn_play" mnemonicParsing="false" onAction="#playSimulation" styleClass="btn" text="Play">
                                 <graphic>
                                    <FontAwesomeIconView glyphName="PLAY" />
                                 </graphic>
                              </Button>
                              <Button id="btn__stop" fx:id="btn_stop" mnemonicParsing="false" styleClass="btn" text="Stop">
                                 <graphic>
                                    <FontAwesomeIconView glyphName="STOP" />
                                 </graphic>
                              </Button>
                          </buttons>
                        </ButtonBar>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="15.0" />
               </padding>
            </VBox>
         </content>
      </Tab>
       <Tab text="history">
           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
               <TableView layoutX="28.0" layoutY="16.0" prefHeight="200.0" prefWidth="868.0">
                   <columns>
                       <TableColumn prefWidth="94.0" text="Session ID" />
                       <TableColumn prefWidth="334.0" text="Customers" />
                       <TableColumn prefWidth="75.0" text="Starting time" />
                       <TableColumn prefWidth="75.0" text="Ending time" />
                   </columns>
                   <columnResizePolicy>
                       <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                   </columnResizePolicy>
               </TableView>
           </AnchorPane>
       </Tab>
   </tabs>
</TabPane>
